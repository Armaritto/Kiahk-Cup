<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuizFUTDraft" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">true</item>
        <item name="colorAccent">@color/cyan</item>
    </style>

    <style name="home_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/_4sdp</item>
        <item name="android:layout_marginRight">@dimen/_4sdp</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:layout_marginBottom">@dimen/_4sdp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="fontFamily">@font/segoebold</item>
        <item name="android:textSize">@dimen/_19sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="main_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_138sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_31sdp</item>
        <item name="android:fontFamily">@font/segoebold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:layout_marginLeft">@dimen/_15sdp</item>
        <item name="android:layout_marginRight">@dimen/_15sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
    </style>

    <style name="pic_home_btn">
        <item name="android:layout_width">@dimen/_42sdp</item>
        <item name="android:layout_height">@dimen/_42sdp</item>
        <item name="android:layout_marginLeft">@dimen/_15sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="sub_home_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/segoebold</item>
        <item name="android:layout_marginLeft">@dimen/_23sdp</item>
        <item name="android:layout_marginBottom">@dimen/_15sdp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/gray_sub</item>
    </style>

    <style name="title_home_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/segoebold</item>
        <item name="android:layout_marginLeft">@dimen/_15sdp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>