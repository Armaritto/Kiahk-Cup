<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/other_background"
    tools:context="com.stgsporting.cup.activities.AdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="0dp">

        <Button
            android:id="@+id/view_users_list"
            style="@style/main_button"
            android:text="Manage Users"
            android:background="@drawable/p7"
            android:visibility="gone"/>

        <Button
            android:id="@+id/manage_quizzes"
            style="@style/main_button"
            android:text="Manage Quizzes"
            android:background="@drawable/p1"
            android:visibility="gone"/>

        <Button
            android:id="@+id/manage_cards"
            style="@style/main_button"
            android:text="Manage Cards"
            android:background="@drawable/p8"
            android:visibility="gone"/>

        <Button
            android:id="@+id/manage_stars"
            style="@style/main_button"
            android:text="Manage Stars"
            android:background="@drawable/p9"
            android:visibility="gone"/>

        <Button
            android:id="@+id/manage_cardicons"
            style="@style/main_button"
            android:textSize="@dimen/_27sdp"
            android:text="Manage Card Icons"
            android:background="@drawable/p3"
            android:visibility="gone"/>

        <Button
            android:id="@+id/manage_positions"
            style="@style/main_button"
            android:text="Manage Positions"
            android:textSize="@dimen/_29sdp"
            android:background="@drawable/p10"
            android:visibility="gone"/>

        <Button
            android:id="@+id/manage_rating_price"
            style="@style/main_button"
            android:textSize="@dimen/_25sdp"
            android:text="Manage Rating Price"
            android:background="@drawable/p11"
            android:visibility="gone"/>

        <Button
            android:id="@+id/manage_buttons"
            style="@style/main_button"
            android:text="Manage Home"
            android:background="@drawable/p5"
            android:visibility="gone"/>

        <Button
            android:id="@+id/errors"
            style="@style/main_button"
            android:text="View Errors"
            android:background="@drawable/p1"
            android:visibility="gone"/>

    </LinearLayout>

</ScrollView>